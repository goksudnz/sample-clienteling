{
  "#pgWomenTablet": {
    ".flButtons": {
      "@extend": ".flexLayout",
      "width": null,
      "height": null,
      "flexProps": {
        "flexGrow": 1,
        "flexDirection": "ROW"
      },
      "paddingLeft": 20,
      "paddingRight": 20,
      "+page:Screen.width > 450": {
        "flexProps": {
          "flexGrow": 2,
          "flexDirection": "COLUMN"
        }
      }
    },
    ".flInfo": {
      "@extend": ".flexLayout",
      "width": null,
      "height": null,
      "flexProps": {
        "flexGrow": 2,
        "flexDirection": "COLUMN"
      }
    },
    ".flPart2": {
      "@extend": ".flexLayout",
      "width": null,
      "height": null,
      "flexProps": {
        "flexGrow": 2,
        "flexDirection": "COLUMN"
      },
      "+page:Screen.width > 450": {
        "flexProps": {
          "flexGrow": 4,
          "flexDirection": "COLUMN_REVERSE"
        }
      }
    },
    ".page": {
      "flexProps": {
        "flexDirection": "COLUMN"
      },
      "+page:Screen.width > 450": {
        "flexProps": {
          "flexDirection": "ROW"
        }
      }
    },
    ".btnAddToCard": {
      "width": null,
      "height": 50,
      "flexProps": {
        "flexGrow": 1
      },
      "backgroundColor": "rgba(210,49,132,1)",
      "marginRight": 5,
      "+page:Screen.width > 450": {
        "marginRight": 40,
        "marginTop": 10,
        "marginBottom": 5
      }
    },
    ".btnQuickOrder": {
      "width": null,
      "height": 50,
      "flexProps": {
        "flexGrow": 1
      },
      "backgroundColor": "rgba(103,164,231,1)",
      "marginLeft": 5,
      "+page:Screen.width > 450": {
        "marginRight": 40,
        "marginTop": 5,
        "marginBottom": 10,
        "marginLeft": null
      }
    },
    ".btnColor": {
      "width": 20,
      "height": 20
    }
  }
}
