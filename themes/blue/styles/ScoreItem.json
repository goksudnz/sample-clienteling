{
	"#scoreItem": {
		"width": null,
		"height": null,
		"&-title": {
			"width": null,
			"height": null,
			"textColor": "#CE1375",
			"textAlignment": "MIDCENTER",
			"maxWidth": 58,
			"font": {
				"family": "Lato",
				"size": 33
			},
			"flexProps": {
				"flexGrow": 3
			},
			"+page:Screen.width > 450 ": {
				"textAlignment": "MIDCENTER",
				"flexProps": {},
				"maxWidth": null
			},
			"+Device:Device.orientation === \"portrait\"": {
				"flexProps": {},
				"maxWidth": 90
			}
		},
		"&-text": {
			"width": null,
			"height": null,
			"textColor": "#000000",
			"textAlignment": "MIDLEFT",
			"multiline": true,
			"marginLeft": 10,
			"maxWidth": null,
			"font": {
				"family": "Lato",
				"size": 12
			},
			"flexProps": {
				"flexGrow": 3
			},
			"+Device:Device.orientation === \"portrait\"": {
				"maxWidth": 90,
				"flexProps": {}
			},
			"+Device:Device.orientation === \"landscape\"": {
				"flexProps": {
					"flexGrow": 2
				},
				"marginLeft": null,
				"textAlignment": "MIDCENTER"
			}
		}
	}
}